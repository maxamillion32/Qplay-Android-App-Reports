<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation = "vertical"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <TextView
        android:layout_width="600dp"
        android:layout_height="80dp"
        android:text="ME"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="40dp"
        android:gravity="center"
        android:background="#98AFC7"
        android:id="@+id/tvTop" />
    <TextView
        android:layout_below="@+id/tvTop"
        android:id="@+id/tvName"
        android:text="Username"
        android:width="600dp"
        android:height="90dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rec_border"
        android:layout_width = "wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height = "wrap_content"/>
    <ScrollView
        android:layout_below="@+id/tvName"
        android:id="@+id/scView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:width="600dp"
                android:height="350dp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="25dp"
                android:gravity="center"
                android:text="user discription"
                android:id="@+id/tvInfo" />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_below="@+id/scView"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/llSetting"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rec_border">
        <ImageView
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:clickable="false"
            android:background="#0000"
            android:src="@drawable/setting"/>
        <TextView
            android:id="@+id/tvSetting"
            android:textColor="#000000"
            android:text="Edit Profile"
            android:width="600dp"
            android:height="50dp"
            android:textStyle="bold"
            android:textSize="30dp"
            android:paddingLeft="188dp"
            android:layout_centerHorizontal="true"
            android:layout_width = "wrap_content"
            android:paddingTop="5dp"
            android:layout_height = "wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/llSetting"
        android:id="@+id/llActivities"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rec_border">
        <ImageView
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:clickable="false"
            android:background="#0000"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ball"/>
        <TextView
            android:text="My Activities"
            android:width="600dp"
            android:height="50dp"
            android:textStyle="bold"
            android:textSize="30dp"
            android:paddingLeft="180dp"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:layout_width = "wrap_content"
            android:paddingTop="5dp"
            android:layout_height = "wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/llActivities"
        android:id="@+id/llLogout"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rec_border">
        <ImageView
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:clickable="false"
            android:background="#0000"
            android:src="@drawable/logout"/>
        <TextView
            android:id="@+id/tvLogout"
            android:textColor="#000000"
            android:text="Logout"
            android:width="600dp"
            android:height="50dp"
            android:textStyle="bold"
            android:textSize="30dp"
            android:paddingLeft="215dp"
            android:layout_centerHorizontal="true"
            android:layout_width = "wrap_content"
            android:paddingTop="5dp"
            android:layout_height = "wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/linearButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:background="#98AFC7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:width="300dp"
            android:height="70dp"
            android:textStyle="bold"
            android:text="Activities"
            android:id="@+id/bActivities" />
        <Button
            android:background="#966F33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:id="@+id/bProfile"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20dp"
            android:width="300dp"
            android:height="70dp" />
    </LinearLayout>
</RelativeLayout>