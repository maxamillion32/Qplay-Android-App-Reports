<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation = "vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:id="@+id/llMenuBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:paddingLeft="5dp"
            android:id="@+id/tvBack"
            android:text="Back"
            android:textColor="#000000"
            android:background="#98AFC7"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_width = "wrap_content"
            android:layout_height = "match_parent" />
        <TextView
            android:text="About"
            android:textColor="#000000"
            android:background="#98AFC7"
            android:textStyle="bold"
            android:textSize="30dp"
            android:paddingLeft="105dp"
            android:layout_width = "fill_parent"
            android:layout_height = "40dp" />
    </LinearLayout>
    <TextView
        android:layout_below="@+id/llMenuBar"
        android:id="@+id/tvName"
        android:text="Username"
        android:width="600dp"
        android:height="50dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rec_border"
        android:layout_width = "match_parent"
        android:layout_marginTop="5dp"
        android:layout_height = "wrap_content"/>
    <TextView
        android:textStyle="bold"
        android:layout_below="@+id/tvName"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:width="600dp"
        android:height="250dp"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="25dp"
        android:text="Introduction"
        android:gravity="center"
        android:id="@+id/tvInfo" />
    <LinearLayout
        android:layout_below="@+id/tvInfo"
        android:id="@+id/llActivities"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rec_border">
        <ImageView
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:clickable="false"
            android:background="#0000"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ball"/>
        <TextView
            android:text="Activities"
            android:width="380dp"
            android:height="35dp"
            android:textStyle="bold"
            android:textSize="25dp"
            android:paddingLeft="115dp"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:layout_width = "fill_parent"
            android:layout_height = "wrap_content" />
    </LinearLayout>

    <RatingBar
        android:layout_below="@id/displayView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:numStars="5"
        android:rating="4"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar" />
    <TextView
        android:layout_below="@+id/llActivities"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:id="@+id/displayView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Your rating is: 4"/>
</RelativeLayout>