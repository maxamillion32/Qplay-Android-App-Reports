<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation = "vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:id="@+id/llMenuBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="0"
            android:id="@+id/tvCancel"
            android:text="Cancel"
            android:textColor="#000000"
            android:background="#98AFC7"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_width = "wrap_content"
            android:layout_height = "match_parent" />
        <TextView
            android:layout_weight="4"
            android:text="ME"
            android:textColor="#000000"
            android:background="#98AFC7"
            android:textStyle="bold"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_width = "fill_parent"
            android:layout_height = "40dp" />
        <TextView
            android:layout_weight="0"
            android:gravity="center"
            android:textColor="#000000"
            android:paddingRight="5dp"
            android:textStyle="bold"
            android:id="@+id/tvSave"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="false"
            android:background="#98AFC7"
            android:text="Save"
            android:textSize="20dp"/>
    </LinearLayout>
    <EditText
        android:layout_below="@+id/llMenuBar"
        android:id="@+id/etName"
        android:textStyle="bold"
        android:hint="Change your name here"
        android:height="40dp"
        android:textSize="25dp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rec_border"
        android:layout_width = "fill_parent"
        android:layout_marginTop="5dp"
        android:layout_height = "wrap_content"/>
    <EditText
        android:textStyle="bold"
        android:layout_below="@id/etName"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:layout_height="300dp"
        android:background="@drawable/rec_border"
        android:textSize="25dp"
        android:hint="About you"
        android:id="@+id/etInfo" />
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/linearButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:background="#98AFC7"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_weight="1"
            android:height="30dp"
            android:textStyle="bold"
            android:text="Activities"
            android:id="@+id/bActivities" />
        <Button
            android:background="#966F33"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:id="@+id/bProfile"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20dp"
            android:height="30dp" />
    </LinearLayout>

</RelativeLayout>